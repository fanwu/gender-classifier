# Example Terraform Variables File
# Copy this file to terraform.tfvars and update with your actual values
# terraform.tfvars is in .gitignore and should never be committed

# AWS Configuration
aws_region = "us-east-1"

# Container Configuration
# Replace YOUR_ACCOUNT_ID with your actual AWS account ID
image_uri = "238295645671.dkr.ecr.us-east-1.amazonaws.com/gender-classifier:latest"

# Model Configuration
# Replace with your actual S3 bucket name
model_bucket = "fanwu-ml-test"
model_prefix = "models/gender-classification/"

# ECS Task Configuration
task_cpu      = 1024    # 1 vCPU
task_memory   = 2048    # 2 GB RAM
desired_count = 1       # Number of running tasks

# Project Configuration
project_name = "gender-classifier"
environment  = "prod"

# Logging Configuration
log_retention_days = 7

# UI Hosting Configuration
ui_bucket_name = "fanwu-ml-test"  # Replace with your S3 bucket name
ui_s3_prefix = "ui/"  # Empty for root, or "ui/" for subfolder
cloudfront_price_class = "PriceClass_100"  # Most cost-effective
